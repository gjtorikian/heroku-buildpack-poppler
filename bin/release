#!/usr/bin/env bash
# bin/release <build-dir>

cat <<EOF
---
config_vars:
  PATH=/app/vendor/glib/bin:/app/vendor/libgdkpixbuf/bin:/app/vendor/fontconfig/bin:/app/vendor/libpoppler/bin:$PATH
  LD_RUN_PATH=/app/vendor/glib/lib:/app/vendor/libgdkpixbuf/lib:/app/vendor/fontconfig/lib:/app/vendor/libpoppler/lib:$LD_RUN_PATH
  LD_LIBRARY_PATH=/app/vendor/glib/lib:/app/vendor/libgdkpixbuf/lib:/app/vendor/fontconfig/lib:/app/vendor/libpoppler/lib:$LD_LIBRARY_PATH
  PKG_CONFIG_PATH=/app/vendor/glib/lib/pkgconfig:/app/vendor/libgdkpixbuf/lib/pkgconfig:/app/vendor/fontconfig/lib/pkgconfig:/app/vendor/libpoppler/lib/pkgconfig:$PKG_CONFIG_PATH
EOF
